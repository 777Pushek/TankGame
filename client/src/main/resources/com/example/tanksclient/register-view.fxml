<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.example.tanksclient.RegisterController" 
      alignment="CENTER" 
      spacing="20"
      styleClass="auth-container"
      stylesheets="@start.css">
    <padding>
        <Insets top="50" right="50" bottom="50" left="50" />
    </padding>
    
    <Label text="Register" styleClass="auth-title" />
    
    <VBox spacing="15" styleClass="auth-form">
        <Label text="Username" styleClass="auth-label" />
        <TextField fx:id="usernameField" promptText="Choose a username" styleClass="auth-field" />
        
        <Label text="Password" styleClass="auth-label" />
        <PasswordField fx:id="passwordField" promptText="Choose a password" styleClass="auth-field" />
        
        <Label text="Confirm Password" styleClass="auth-label" />
        <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password" styleClass="auth-field" />
    </VBox>
    
    <HBox spacing="15" alignment="CENTER" styleClass="auth-button-bar">
        <Button text="Register" onAction="#onRegister" styleClass="auth-button-primary" />
        <Button text="Cancel" onAction="#onCancel" styleClass="auth-button-secondary" />
    </HBox>
    
    <Label fx:id="statusLabel" text="" styleClass="auth-status" />
</VBox>
